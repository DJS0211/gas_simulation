# Backward thermal calculations which are compared against Disort output
# Do not edit this file by hand. They should be generated with the gen_test_files.sh script
data_files_path ../../data/
atmosphere_file ../../data/atmmod/afglus.dat
source thermal
wavelength 8000
mol_abs_param lowtran
zout 11.000
albedo .1
wc_file 1D WC1D.DAT
ic_file 1D IC1D.DAT
quiet

rte_solver montecarlo    # Radiative transfer equation solver MYSTIC
mc_photons 1.E5
mc_backward
mc_backward_output edn
mc_backward_heat hybrid
mc_backward_output heat K_per_day
